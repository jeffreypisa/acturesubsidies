{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
	  <section class="bg-white">
			<div class="container">
				<h1> {{ title }} </h1>
				<div class="row">
					<div class="col-md-10">
						<p class="lead">
							{{ options.blog_archief_lead_tekst }}
						</p>
					</div>
				</div>
			</div>
	  </section>
		<section class="bg-white">
			<div class="container">
	      {% if categories %}
					<div class="mod-filterblocks">
						<a href="{{ posttype_link }}" class="noline {% if current_category == '' %} active {% endif %}">Alle</a>
						{% for item in categories %}
							<a href="{{ item.link }}" class="noline {% if item.id == current_category %} active {% endif %}">{{ item.title }}</a>
						{% endfor %}
					</div>
				{% endif %}
	      <div class="clearfix"></div>
	      <div class="cards cards-archive">
					<div class="row">
						{% for item in posts %}  
							<div class="col-md-6 col-xl-4">
								{% include 'tease-blog.twig' %}
							</div>
						{% endfor %}
					</div>
	      </div>
	    </div>
	  </section>
		{% include 'pagebuilder.twig' %}
	</div>
{% endblock %}