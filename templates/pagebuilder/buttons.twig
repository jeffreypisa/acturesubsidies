<section id="section{{ sectionno }}" class="mod-buttons {% if item.bg_alt %} bg-lightgrey {% else %} bg-transparent {% endif %}">
	  <div class="container">
	
		<div class="row">
			<div class="col-lg-8">
				<div class="row">
					{% for item in item.knoppen %}
						<div class="col-md-6">
							<a class="btn btn-card btn-block btn-lg" target="{{ item.link.target }}" href="{{ item.link.url }}">
								{{ item.link.title }} 
							</a>
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="col-lg-4 body3 order-first order-lg-last">
				{% if item.subtitel %}
					<span class="sub">{{ item.subtitel }}</span>
				{% endif %}
				{% if item.titel %}
					<h2>{{ item.titel }}</h2>
				{% endif %}
				{% if item.tekst %}
					{{ item.tekst }}
				{% endif %}
				{% if item.link %}
					<a class="btn btn-primary" target="{{ item.link.target }}" href="{{ item.link.url }}">
						{{ item.link.title }} 
					</a>
				{% endif %}
				<div class="clearfix"></div>
				<br><br>
			</div>
		</div>
	  </div>
	</section>