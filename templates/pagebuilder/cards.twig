<section id="section{{ sectionno }}" class="mod-cards {% if item.bg_alt %} bg-lightgrey {% else %} bg-transparent {% endif %}">
	<div class="container">
  	<div class="row">
  		<div class="col-md-10 offset-md-1 text-center">
		  	{% if item.subtitel %}
		    	<span class="sub">{{ item.subtitel }}</span>
		    {% endif %}
		    {% if item.titel %}
		    	<h2 class="{% if item.font_xl %} h1 {% endif %}">{{ item.titel }}</h2>
		    {% endif %}
		    {% if item.lead %}
		    	<p class="lead"> {{ item.lead }} </p>
		    {% endif %}
		    {% if item.tekst %}
		    	<p> {{ item.tekst }} </p>
		    {% endif %}
  		</div>
  	</div>
  	<br>
		<div class="row justify-content-center">
			{% set delay = 0 %}
  		{% for item in item.cards %}
  			<div class="col-md-6 col-lg-4">
  				<div class="card with-shadow">
  					<div class="card-body body3">
	  					<div data-mh>
					  		<div class="linewithdots">
				  				<div class="row">
				  					<div class="col-auto">
											<div class="dot" style="background: {{ item.color }}"></div>
				  					</div>
				  					<div class="col-auto">
											<div class="dot" style="background: {{ item.color }}"></div>
				  					</div>
				  					<div class="col">
											<div class="line" style="background: {{ item.color }}"></div>
				  					</div>
				  				</div>
				  			</div>
				  			{% if item.subtitel %}
				        	<span class="sub" style="color: {{ item.color }}">{{ item.subtitel }}</span>
				        {% endif %}
		  					{% if item.titel %}
		  						<h4> {{ item.titel }} </h4>
		  					{% endif %}
		  					{% if item.tekst %}
		  						<p> {{ item.tekst }} </p>
		  					{% endif %}
	  					</div>		
	  					{% if item.link %}
	  						<br>
								<a class="btn btn-secondary" target="{{ item.link.target }}" href="{{ item.link.url }}">
									{{ item.link.title }}
								</a>
					    {% endif %}
  					</div>
  				</div>
  			</div>
  			{% set delay = delay + '150' %}
  		{% endfor %}
		</div>
		{% if item.link_primary or item.link_secondary %}
			<div class="text-center">
				{% if item.link_primary %}
					<a class="btn btn-primary" target="{{ item.link_primary.target }}" href="{{ item.link_primary.url }}">
						{{ item.link_primary.title }} 
					</a>
		    {% endif %}
		    {% if item.link_secondary %}
					<a class="btn btn-secondary" target="{{ item.link_secondary.target }}" href="{{ item.link_secondary.url }}">
						{{ item.link_secondary.title }} 
					</a>
		    {% endif %}
			</div>
		{% endif %}
	</div>
</section>    