<a href="{{ item.link }}" class="tease tease-kennis tease-kennis-tutorial body3 with-shadow">
	{% if item.thumbnail %}
		<div class="card-img-top image-container" style="background-image: url({{ item.thumbnail.src|resize('768') }})">
